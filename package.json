{
  "name": "graceful-kill",
  "version": "1.1.0",
  "description": "gracefully kills a spawn process",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/graceful-kill.git",
  "homepage": "https://github.com/christophehurpeau/graceful-kill",
  "engines": { "node": ">=4.0.0" },
  "main": "./index.js",
  "module:node": "./dist/index-node8.es.js",
  "module:node-dev": "./dist/index-node8-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "clean": "rm -Rf docs dist",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint src/",
    "postcheckout": "yarnhook",
    "postmerge": "yarnhook",
    "postrewrite": "yarnhook",
    "precommit": "lint-staged",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "lint-staged": {
    "{package.json,.eslintrc.json}": ["prettier --write", "git add"],
    "src/**/*.json": ["prettier --write", "git add"],
    "src/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "prettier": { "trailingComma": "all", "singleQuote": true, "printWidth": 100 },
  "commitlint": { "extends": ["@commitlint/config-conventional"] },
  "dependencies": { "nightingale-logger": "^3.4.0" },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest-node": "^1.0.0",
    "eslint": "^4.18.2",
    "eslint-config-pob": "^18.0.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "pob-babel": "^20.0.0",
    "pob-release": "^3.1.0",
    "prettier": "^1.11.1",
    "yarnhook": "^0.1.1"
  }
}
