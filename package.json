{
  "name": "graceful-kill",
  "version": "1.0.1",
  "description": "gracefully kills a spawn process",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "git@github.com:christophehurpeau/graceful-kill.git",
  "homepage": "https://github.com/christophehurpeau/graceful-kill",
  "main": "./index.js",
  "module:node": "./lib-module-node8/index.js",
  "module:node-dev": "./lib-module-node8-dev/index.js",
  "scripts": {
    "build": "pob-build",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "lint": "eslint --ext .js,.jsx src/",
    "postcheckout": "./.git-hooks/post-checkout",
    "postmerge": "./.git-hooks/post-merge",
    "precommit": "./.git-hooks/pre-commit",
    "preparecommitmsg": "./.git-hooks/prepare-commit-msg ${GIT_PARAMS}",
    "preversion": "yarn run lint && yarn run build && pob-repository-check-clean",
    "release": "pob-repository-check-clean && pob-release",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.json": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix --quiet",
      "git add"
    ]
  },
  "dependencies": {
    "flow-runtime": "^0.16.0",
    "nightingale-logger": "^3.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-latest-node": "^0.4.0",
    "eslint": "^4.12.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-config-pob": "^17.0.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "komet": "^0.1.4",
    "komet-karma": "^0.2.5",
    "lint-staged": "^6.0.0",
    "pob-babel": "^18.1.5",
    "pob-release": "^3.1.0",
    "prettier": "^1.8.2"
  }
}
