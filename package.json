{
  "name": "graceful-kill",
  "version": "3.0.1",
  "description": "gracefully kills a spawn process",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com:christophehurpeau/graceful-kill.git",
  "homepage": "https://github.com/christophehurpeau/graceful-kill",
  "engines": {
    "node": ">=10.13.0"
  },
  "main": "./index.js",
  "types": "./dist/index.d.ts",
  "module:node": "./dist/index-node10.es.js",
  "module:node-dev": "./dist/index-node10-dev.es.js",
  "scripts": {
    "build": "pob-build",
    "build:definitions": "tsc -p tsconfig.build.json",
    "clean": "rm -Rf dist",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "tsc && eslint --ext .js,.ts --quiet *.js src",
    "postbuild": "tsc -p tsconfig.build.json",
    "preversion": "yarn run lint && yarn run build && repository-check-dirty",
    "release": "repository-check-dirty && pob-release",
    "test": "jest",
    "test:watch": "jest",
    "version": "pob-version",
    "watch": "pob-watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts",
      "<rootDir>/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "babel-jest"
    },
    "testEnvironment": "node"
  },
  "pob": {
    "babelEnvs": [
      {
        "target": "node",
        "version": "10",
        "formats": [
          "cjs",
          "es"
        ]
      }
    ],
    "entries": [
      "index"
    ],
    "jsx": false
  },
  "dependencies": {
    "@types/node": ">=10.0.0",
    "nightingale-logger": "^10.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.5",
    "@pob/commitlint-config": "1.1.2",
    "@pob/eslint-config": "38.2.0",
    "@pob/eslint-config-node": "38.2.0",
    "@pob/eslint-config-typescript": "38.2.0",
    "@pob/eslint-config-typescript-node": "38.2.0",
    "@pob/root": "2.2.2",
    "@types/jest": "26.0.5",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "babel-jest": "26.1.0",
    "babel-preset-latest-node": "4.1.0",
    "eslint": "6.8.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-unicorn": "18.0.1",
    "husky": "4.3.0",
    "jest": "26.1.0",
    "pob-babel": "24.14.0",
    "pob-lcov-reporter": "2.4.0",
    "pob-release": "5.6.2",
    "prettier": "2.0.5",
    "typescript": "4.0.3"
  }
}
